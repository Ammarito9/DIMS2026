<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.demo2.Controller.AdvisersController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label layoutX="102.0" layoutY="28.0" text="ID" />
        <Label layoutX="86.0" layoutY="70.0" text="Name" />
        <Label layoutX="54.0" layoutY="112.0" text="Department" />
        <TextField fx:id="adviserId" layoutX="122.0" layoutY="24.0" />
        <TextField fx:id="adviserName" layoutX="122.0" layoutY="66.0" />
        <TextField fx:id="adviserDepartment" layoutX="122.0" layoutY="108.0" />
